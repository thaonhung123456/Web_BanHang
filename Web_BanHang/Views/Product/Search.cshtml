@model IEnumerable<Web_BanHang.Models.Product>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #div-ds {
        text-align: center;
        background-color: lightcoral;
        height: 50px;
        border-radius: 20px 20px 0 0;
    }

    .MenuPage li {
        display: inline;
    }

    #div_search {
        /*        bottom: 0;
        left: 0;*/
        padding-top: 10px;
        height: 50px;
        width: 100%;
        text-align: center;
    }
</style>

<br />
@using (Html.BeginForm("SearchOption", "Product"))
{
    <div style="text-align:center">
        <h3 style="">SearchOption</h3>
        <text>Từ</text>
        <input type="number" name="min" />
        <text>Đến</text>
        <input type="number" name="max" />
        <input type="submit" value="Search" />
    </div>
    <div id="div-ds"><h2 style="padding-top: 10px; color:white">Danh sách sản phẩm</h2></div>
    <div class="container">
        <div class="row">
            @foreach (var pro in Model)
            {
                <div class="col-sm-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card-pro">
                        @*<p>@Html.DisplayFor(model => pro.ProductID)</p>*@
                        <img src="@Url.Content(pro.ImagePro)" height="160" width="160" />
                        <p>@Html.DisplayFor(model => pro.NamePro)</p>
                        <p>@Html.DisplayFor(model => pro.Price)</p>
                        @*<p><input type="submit" value="Buy" id="buy"/></p>*@
                        <a href="/ShoppingCart/AddToCart/@pro.ProductID" class="btn btn-default">Buy</a>
                    </div>
                </div>
            }
        </div>
    </div>
}